package demo;

import java.util.Scanner;

//import java.util.Scanner;

public class Shape {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int n = in.nextInt();
		for (int row=1; row<=n; row++) {
            for (int col=1; col<=row; col++) {
                System.out.print("*");
            }
 
            System.out.println();
        }
		
		for (int rown-1; row>=1; row--) {
			for (int col=1; col<=row; col++) {
	            System.out.print("*");
	        } 
	            System.out.println();
	    }
	}
}
