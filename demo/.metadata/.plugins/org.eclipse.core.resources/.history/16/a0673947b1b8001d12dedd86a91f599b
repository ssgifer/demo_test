package demo.tutor2;

import java.util.Scanner;

public class test10math2 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("m : ");
		int m = scanner.nextInt();
		System.out.print("n : ");
		int n= scanner.nextInt();
		System.out.print("p : ");
		int p = scanner.nextInt();
		System.out.print("q : ");
		int q = scanner.nextInt();
		float abs = (float)(Math.abs(m-n));
		float mul = 2 * m * n;
		float cal1 = abs / mul;
		float ppow = (float)(Math.pow(p,2));
		float qpow = (float)(Math.pow(q,2));
		float root = (float)(Math.sqrt(ppow-qpow));
		float cal2 = root / (p+q);
		float result = cal1 + cal2;
		System.out.println(result);
		
	}
}
