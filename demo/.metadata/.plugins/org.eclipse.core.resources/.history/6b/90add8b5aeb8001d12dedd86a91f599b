package demo.tutor2;

import java.util.Scanner;
import java.math.*;

public class test10math1 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("a : ");
		int a = scanner.nextInt();
		System.out.print("b : ");
		int b = scanner.nextInt();
		System.out.print("c : ");
		int c = scanner.nextInt();
		System.out.print("r : ");
		int r = scanner.nextInt();
		float cal1 = (float)(2 * Math.PI * Math.pow(r, 2));
		float cal2 = (float)(Math.sqrt(Math.pow(b, 2) - (4 * a * c)));
		System.out.println(cal1/cal2);
	}
}
