package demo;

import java.util.Scanner;

public class Shape {
	public static void main(String[] args) {
		Scanner kb = new Scanner(System.in);
		int n = kb.nextInt();
		int i;
		int j;
		for(i=0; i<=n-1; i++) {
			for(j=0; j<=i; j++){
				System.out.println("*");
		}
		}
		for(i=n-1; i>=0; i--) {
			for(j=0; j<=i-1; j++) {
				System.out.println("*");
		}
	}
	}
}
