package demo;

import java.util.Scanner;

//import java.util.Scanner;

public class Shape {
	public static void main(String[] args) {
		Scanner kb = new Scanner(System.in);
		int n = kb.nextInt();
		for (int i=1; i<=n; i++) {
            for (int j=1; j<=i; j++) {
                System.out.print("*");
            }
 
            System.out.println();
		}
		for (int i=n-1; i>=1; i--) {
			for (int j=1; i<=j; j++) {
	            System.out.print("*");
	        } 
	            System.out.println();
	        }
	    }
	}

