package demo.tutor2;

import java.util.Scanner;

public class test10math2 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("m : ");
		int m = scanner.nextInt();
		System.out.print("n : ");
		int n= scanner.nextInt();
		System.out.print("p : ");
		int p = scanner.nextInt();
		System.out.print("q : ");
		int q = scanner.nextInt();
//		float abs = (float)(Math.abs(m-n));
//		float mul = (float)(2 * m * n);
//		float cal1 = (float)(abs / mul);
//		float ppow = (float)(Math.pow(p, 2));
//		float qpow = (float)(Math.pow(q, 2));
//		float div = (float)(ppow - qpow);
//		float root = (float)(Math.sqrt(div));
//		float pq =  p + q;
//		float cal2 = (float)(root / pq );
		float cal1 = (float)(Math.abs(m-n));
		float cal2 = (float)(2 * m * n);
		float cal3 = (float)(Math.sqrt(Math.pow(p, 2)-Math.pow(q, 2)));
		float cal4 = (float)(p + q);
		float result = (float)((cal1 / cal2) - (cal3 / cal4));
		System.out.printf("Result = %.2f", result);
	}
}
