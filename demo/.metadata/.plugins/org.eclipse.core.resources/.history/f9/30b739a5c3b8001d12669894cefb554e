package demo.tutor2;

import java.util.Scanner;
import java.math.*;

public class test10math1 {
	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("a : ");
		int a = scanner.nextInt();
		System.out.print("b : ");
		int b = scanner.nextInt();
		System.out.print("c : ");
		int c = scanner.nextInt();
		System.out.print("r : ");
		int r = scanner.nextInt();
//		float rpow = (float)(Math.pow(r, 2));
//		float cal1 = (float)(2 * Math.PI * rpow);
//		float bpow = (float)(Math.pow(b, 2));
//		float ac = (float)(bpow-(4*a*c));
//		float root = (float)(Math.sqrt(cal1));
		float cal1 = (float)(2 * Math.PI * Math.pow(r, 2));
		float cal2 = (float)(Math.sqrt(Math.pow(b, 2) - (4 * a * c)));
		float result = cal1/cal2;
		//float result = (float)(cal1 / root);
		System.out.printf("Result = %.2f", result);
	}
}

//a : 10
//b : 20
//c : 5
//r : 4
//Result = 7.11
